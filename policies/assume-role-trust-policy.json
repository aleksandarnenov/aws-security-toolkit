// # Disclaimer: AS-IS, no warranty. Read-only security checks. Test in sandbox first.
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowScannerAccountToAssume",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::123456789012:root"
      },
      "Action": "sts:AssumeRole",
      "Condition": {
        "StringEquals": {
          "sts:ExternalId": "replace-with-strong-external-id"
        }
      }
    }
  ]
}
